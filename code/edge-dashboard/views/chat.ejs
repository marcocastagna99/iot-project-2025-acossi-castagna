<section class="flex-grow-1 d-flex flex-column" style="min-height: 0">
  <div
    class="card chat-card shadow-sm d-flex flex-column flex-grow-1"
    style="min-height: 0"
  >
    <div
      id="chat-thread"
      class="flex-grow-1 overflow-auto m-1 p-3 bg-white d-flex flex-column"
      style="min-height: 0"
    >
      <% (messages || []).forEach(m => { %>
      <div
        class="d-flex align-items-start gap-2 mb-3 <%= m.role === 'user' ? 'flex-row-reverse' : '' %>"
      >
        <div
          class="border rounded-3 p-2 shadow-sm markdown <%= m.role === 'user' ? 'bg-primary-subtle border-primary-subtle' : 'bg-white' %> position-relative <%= m.dataAnalysis ? 'pe-4' : '' %>"
          data-md-raw="true"
        >
          <% if (m.dataAnalysis) { %>
          <div
            class="position-absolute top-0 end-0 p-1 text-success"
            title="Data analysis active"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M3 3v18h18" />
              <rect x="7" y="10" width="2" height="7" />
              <rect x="11" y="6" width="2" height="11" />
              <rect x="15" y="13" width="2" height="4" />
            </svg>
          </div>
          <% } %> <%= m.content %>
        </div>
      </div>
      <% }) %> <% if (!messages || messages.filter(m => m.role ===
      'user').length === 0) { %>
      <div
        id="suggested-prompts"
        class="d-flex flex-column justify-content-end align-items-center flex-grow-1 pb-0"
      >
        <div class="row w-100 justify-content-center">
          <div class="col-md-4 mb-2">
            <div
              class="card h-100 shadow-sm suggested-prompt-card"
              style="cursor: pointer"
              data-prompt="I think I have a slight fever. What should I do ?"
              data-analysis="false"
            >
              <div
                class="card-body p-3 d-flex align-items-center justify-content-center text-center position-relative"
              >
                <p class="card-text small m-0 px-2">
                  I think I have a slight fever. What should I do ?
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-4 mb-2">
            <div
              class="card h-100 shadow-sm suggested-prompt-card"
              style="cursor: pointer"
              data-prompt="Could you analyze my vital signs and tell me if there is any problem ?"
              data-analysis="true"
            >
              <div
                class="card-body p-3 d-flex align-items-center justify-content-center text-center position-relative"
              >
                <div class="position-absolute top-0 end-0 m-2 text-success">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M3 3v18h18" />
                    <rect x="7" y="10" width="2" height="7" />
                    <rect x="11" y="6" width="2" height="11" />
                    <rect x="15" y="13" width="2" height="4" />
                  </svg>
                </div>
                <p class="card-text small m-0 px-2">
                  Could you analyze my vital signs and tell me if there is any
                  problem ?
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>

    <form id="chat-form" class="bg-white m-1 p-2">
      <div class="d-flex gap-2 align-items-start">
        <button
          type="button"
          id="chat-data-analysis-btn"
          class="btn btn-outline-success d-flex align-items-center justify-content-center px-2"
          aria-pressed="false"
          title="Active analysis of clinical data for this question"
        >
          <svg
            id="chat-data-analysis-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M3 3v18h18" />
            <rect x="7" y="10" width="2" height="7" />
            <rect x="11" y="6" width="2" height="11" />
            <rect x="15" y="13" width="2" height="4" />
          </svg>
        </button>
        <textarea
          id="chat-input-text"
          name="message"
          rows="1"
          class="form-control"
          placeholder=""
          autocomplete="off"
        ></textarea>
        <button
          type="submit"
          id="send-btn"
          class="btn btn-primary d-inline-flex align-items-center justify-content-center"
        >
          <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
            <path d="M3 11l18-8-8 18-2-7-8-3z" fill="currentColor" />
          </svg>
        </button>
      </div>
      <input type="hidden" id="conv-id" value="<%= sessionId %>" />
    </form>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js" defer></script>
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/highlight.js/styles/github-dark.min.css"
/>
<script
  src="https://cdn.jsdelivr.net/npm/highlight.js/lib/common.min.js"
  defer
></script>
<script src="/public/js/chat.js" defer></script>
